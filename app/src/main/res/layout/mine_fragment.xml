<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteColor"
    tools:context=".ui.mine.MineFragment">

    <LinearLayout
        android:id="@+id/userLinLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/mineTv"
            android:layout_width="31dp"
            android:layout_height="22dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="13dp"
            android:text="我的"
            android:textColor="#ff666666"
            android:textSize="15sp" />


        <ImageView
            android:id="@+id/avatarIv"
            android:layout_width="67dp"
            android:layout_height="67dp"
            android:layout_below="@id/mineTv"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="13dp"
            android:src="@mipmap/ic_logo" />


        <TextView
            android:id="@+id/nameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="3dp"
            android:text="AuRRent"
            android:textColor="#ff333333"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/signTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="这个人很懒，什么都没有留下！"
            android:textColor="#ff666666"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/contentRelayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/userLinLayout"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:layout_marginRight="20dp">

        <TextView
            android:id="@+id/collectNumTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:lineSpacingMultiplier="1.2"
            android:layout_weight="1"
            android:text="0\n收藏"
            android:textColor="#ff333333"
            android:textSize="15sp" />


        <TextView

            android:id="@+id/blogNumTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_weight="1"
            android:gravity="center"
            android:lineSpacingMultiplier="1.2"
            android:text="0\n博客"
            android:textColor="#ff333333"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/fansNumTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:layout_weight="1"
            android:lineSpacingMultiplier="1.2"
            android:text="0\n关注"
            android:textColor="#ff333333"
            android:textSize="15sp" />

        <TextView
            android:layout_weight="1"
            android:id="@+id/idolTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:lineSpacingMultiplier="1.2"
            android:text="0\n关注"
            android:textColor="#ff333333"
            android:textSize="15sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/contentRelayout"
        android:background="@color/searhbarColor"
        android:orientation="vertical">

        <com.ifreedomer.cplus.widget.SettingItem
            android:id="@+id/historyItem"
            android:layout_width="match_parent"
            android:layout_height="@dimen/settingItemHeight"
            android:layout_marginTop="7dp" />


        <com.ifreedomer.cplus.widget.SettingItem
            android:id="@+id/feedbackItem"
            android:layout_width="match_parent"
            android:layout_height="@dimen/settingItemHeight"
            android:layout_marginTop="7dp" />

        <include layout="@layout/layout_divider" />

        <com.ifreedomer.cplus.widget.SettingItem
            android:id="@+id/settingItem"
            android:layout_width="match_parent"
            android:layout_height="@dimen/settingItemHeight" />

        <include layout="@layout/layout_divider" />

        <com.ifreedomer.cplus.widget.SettingItem
            android:id="@+id/donateItem"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/settingItemHeight" />

        <include layout="@layout/layout_divider" />

        <com.ifreedomer.cplus.widget.SettingItem
            android:id="@+id/joinGroupItem"
            android:layout_width="match_parent"
            android:layout_height="@dimen/settingItemHeight" />
    </LinearLayout>


</RelativeLayout>